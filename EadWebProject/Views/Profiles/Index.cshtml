@using PagedList;
@using PagedList.Mvc;
@model IPagedList<EadWebProject.Models.Profile>

@{
    ViewBag.Title = "Index";
}


<br><br><br>
<div class="container pull-right" style="color:white">
    <h2>Search By:</h2>
    <form>
        <input type="radio" name="SearchOptions" value="Name" checked /> Name
        <input type="radio" name="SearchOptions" value="City" /> City
        <input type="radio" name="SearchOptions" value="Education" /> Education
        <input type="radio" name="SearchOptions" value="Experience" /> Experience
        <input type="text" name="SearchToken" />
        <input type="submit" />
    </form>
</div>
<br><br><br>
<br><br><br>

<div class="container">


    @{


        int i = 0;
        if (Model.Count == 0)
        {
            <h1 style="color:white">No Tutors to show</h1>
        }
        while (i < Model.Count)
        {
            <br>
            <div class="row">
                @if (i < Model.Count)
                {
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="thumbnail">
                            <img src="@Url.Content("~/UploadedImages/" + Model[i].ProfilePic)" alt="..." />

                            <div class="caption">
                                <h3>@Model[i].FirstName</h3>
                                <h5>@Model[i].Address</h5>
                                <h5>@Model[i].Education</h5>
                                <p>
                                    <a href="/Profiles/Details/@Model[i].ProfileID" class="btn btn-primary" role="button">View Complete Profile</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    i++;
                }
                @if (i < Model.Count)
                {
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="thumbnail">
                            <img src="@Url.Content("~/UploadedImages/" + Model[i].ProfilePic)" alt="..." />

                            <div class="caption">
                                <h3>@Model[i].FirstName</h3>
                                <h5>@Model[i].Address</h5>
                                <h5>@Model[i].Education</h5>
                                <p>
                                    <a href="/Profiles/Details/@Model[i].ProfileID" class="btn btn-primary" role="button">View Complete Profile</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    i++;
                }
                @if (i < Model.Count)
                {
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="thumbnail">
                            <img src="@Url.Content("~/UploadedImages/" + Model[i].ProfilePic)" alt="..." />

                            <div class="caption">
                                <h3>@Model[i].FirstName</h3>
                                <h5>@Model[i].Address</h5>
                                <h5>@Model[i].Education</h5>
                                <p>
                                    <a href="/Profiles/Details/@Model[i].ProfileID" class="btn btn-primary" role="button">View Complete Profile</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    i++;
                }
                @if (i < Model.Count)
                {
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="thumbnail">
                            <img src="@Url.Content("~/UploadedImages/" + Model[i].ProfilePic)" alt="..." />

                            <div class="caption">
                                <h3>@Model[i].FirstName</h3>
                                <h5>@Model[i].Address</h5>
                                <h5>@Model[i].Education</h5>
                                <p>
                                    <a href="/Profiles/Details/@Model[i].ProfileID" class="btn btn-primary" role="button">View Complete Profile</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    i++;
                }
            </div>

        }
    }

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, SearchOptions = Request.QueryString["SearchOptions"], SearchToken = Request.QueryString["SearchToken"] }),

    new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded , DisplayPageCountAndCurrentLocation = true , DisplayItemSliceAndTotal = true})
</div>
